@model FirstResponsiveWebAppMortenson.Models.UserModel  
@*Page Title Used in layout*@
@{
    ViewData["Title"] = "Home";
}

@*Bootstrap container*@
<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

    @*Card groups form*@
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="h4 mb-3">User Details</h2>


                @*validation error for form*@
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                @*submit form to Index after button pushed, "POST action"*@
                <form asp-action="Index" method="post" novalidate>
                    
                @*Input section for Name of form, has validation to prevent numbers*@
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" autocomplete="name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    @*Input section for BirthYear, year must be before 1900*@
                    <div class="mb-3">
                        <label asp-for="BirthYear" class="form-label">Birth Year</label>
                        <input asp-for="BirthYear" class="form-control" type="number" min="1900" max="2026" />
                        <span asp-validation-for="BirthYear" class="text-danger"></span>
                    </div>

                    @*Submit and clear buttons*@
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="Clear" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </form>
          </div>
       </div>
         </div>
</div>
@*Client side validation script*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}